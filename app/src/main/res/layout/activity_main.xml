<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceleración Lineal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewAcceleration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X: 0.00 m/s²\nY: 0.00 m/s²\nZ: 0.00 m/s²"
        android:textSize="18sp"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/accelerationIndicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/acceleracion"
        android:layout_below="@id/textViewAcceleration"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>
